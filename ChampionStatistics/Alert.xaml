<UserControl x:Class="ChampionStatistics.Alert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionStatistics"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="0,0,0,1" BorderBrush="Crimson">
            <TextBlock x:Name="Title" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Padding="6" />
        </Border>
        <Button Content="[X]" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="6" 
                Background="Gray" Foreground="White" BorderThickness="1" BorderBrush="Black" VerticalContentAlignment="Center" x:Name="CloseButton"/>
        <TextBlock Margin="0,40,0,0" x:Name="TextArea"/>
    </Grid>
</UserControl>
